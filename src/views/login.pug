extends layout

block content
  section.section
    .container
      .card
        header.card-header
          p.card-header-title Log In
        .card-content  
          form#login-form(action="/session", method="POST")
            .field
              label.label(for="email") Email
              .control.has-icons-left.has-icons-right
                input.input(type="email", id="email", name="email", placeholder="e.g alexsmith@gmail.com")
                span.icon.is-small.is-left
                  i.fas.fa-envelope
                span.icon.is-small.is-right
                  i.fas.fa-check
            .field
              label.label(for="password") Password
              .control.has-icons-left
                input.input(type="password", id="password", name="password", placeholder="e.g. s3cr3t", required)
                span.icon.is-small.is-left
                  i.fas.fa-lock
        footer.card-footer
          button.card-footer-item.button.is-link(type="submit", form="login-form") Log In